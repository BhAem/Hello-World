#include <stdio.h>
int mix[110][110];
void f(int n)
{
    int k=1;
    for(int i=0;i<n;i++)                                      /*举例: a[0][0]=1
    {                                                             
        if(i%2==0)                                              a[0][1]=2
        {                                                       a[1][0]=3    
            for(int j=i;j>=0;j--)
            {                                                   a[2][0]=4
                mix[j][i-j]=k++;                                a[1][1]=5
            }                                                   a[0][2]=6
        }
        else                                                    a[0][3]=7
        {                                                       a[1][2]=8
            for(int j=0;j<=i;j++)                               a[2][1]=9
            {                                                   a[3][0]=10*/
                mix[j][i-j]=k++;
            }
        }
    }
    for(int i=n;i<2*n-1;i++)                                 /*a[1][4]=16
    {                                                          a[2][3]=17
        if(i%2==1)                                             a[3][2]=18 
        {                                                      a[4][1]=19
            for(int j=n-1;j>=i-(n-1);j--)
            {                                                  a[4][2]=20
                mix[i-j][j]=k++;                               a[3][3]=21
            }                                                  a[2][4]=22
        }                                                      
        else                                                   a[3][4]=23
        {                                                      a[4][3]=24   
            for(int j=n-1;j>=i-(n-1);j--)
            {                                                   a[4][4]=25
                mix[j][i-j]=k++;
            }
        }
    }
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<n;j++)
        {
            printf("%5d",mix[i][j]);
        }
        printf("\n");
    }
        
}
int main()
{
    int n;
    while(scanf("%d",&n)!=EOF)
    {
        f(n);
    }
    return 0;
}
